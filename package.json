{
  "name": "root",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/snowpackjs/astro-compiler-next.git"
  },
  "scripts": {
    "build": "make astro-wasm && lerna run build --scope @astrojs/compiler",
    "build:compiler": "lerna run build --scope @astrojs/compiler",
    "lint": "eslint \"lib/**/*.{cjs,js,jsx,mjs,ts,tsx}\"",
    "format": "prettier -w .",
    "prerelease": "yarn build:compiler",
    "release": "changeset publish",
    "test": "node ./lib/compiler/test/test.mjs"
  },
  "workspaces": [
    "lib/*"
  ],
  "volta": {
    "node": "14.18.1",
    "npm": "7.11.2",
    "yarn": "1.22.10"
  },
  "devDependencies": {
    "@changesets/cli": "^2.16.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "lerna": "^4.0.0",
    "prettier": "^2.4.1",
    "sass": "^1.43.3"
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  }
}
